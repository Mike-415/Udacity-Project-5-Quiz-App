<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Style to set layout_width and layout_height to 'wrap_content' -->
    <style name="wrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Style for the parent (outer) Horizontal LinearLayout of the questions and answers -->
    <style name="questionAndAnswerHorizontalLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">@dimen/separation_margin</item>
    </style>




    <style name="question_number_text_view" parent="wrapContent">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="question_text_view" parent="question_number_text_view">
        <item name="android:paddingLeft">@dimen/left_margin</item>
    </style>
    <style name="radio_group" parent="wrapContent">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="radio_button" parent="wrapContent">
        <item name="android:layout_marginLeft">@dimen/left_margin</item>
    </style>

    <style name="checkbox" parent="wrapContent">
        <item name="android:paddingLeft">@dimen/checkbox_padding</item>

    </style>
    <style name="vertical_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="left_checkbox_vertical_layout" parent="vertical_layout">
        <item name="android:layout_marginLeft">@dimen/left_margin</item>
    </style>

    <style name="divider_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDivider</item>
        <item name="android:layout_marginBottom">@dimen/separation_margin</item>
    </style>

    <style name="cardInnerLayout" parent="wrapContent">
        <item name="android:padding">@dimen/standard_margin</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
